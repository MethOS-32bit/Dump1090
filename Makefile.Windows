#
# If '$(CPU)=x64', build 64-bit targets. Otherwise 32-bit targets.
#
ifeq ($(CPU),x64)
  BITS = 64
else ifeq ($(CPU),x86)
  BITS = 32
else
  $(error Add an env-var 'CPU=x64' (or 'CPU=x86') depending on the active compiler.)
endif

#
# ASAN build settings:
#
# Could be used with 'USE_UBSAN = 1' too. See 'USE_UBSAN' section below.
#
# This works best:
#   c:\> set ASAN_OPTIONS=print_stats=1:windows_hook_legacy_allocators=1:color=always:halt_on_error=0
#
# Refs:
#   https://docs.microsoft.com/en-us/cpp/sanitizers/asan?view=msvc-160
#   https://github.com/google/sanitizers/wiki/AddressSanitizer
#   https://github.com/google/sanitizers/wiki/AddressSanitizerFlags
#
ifeq ($(USE_ASAN),1)
  CFLAGS += -fsanitize=address -DUSE_ASAN

  ifeq ($(CC),clang-cl)
    LDFLAGS += -inferasanlibs:no \
               -libpath:$(CLANG_$(BITS))/lib/clang/$(CLANG_MAJOR_VER)/lib/windows

    ifeq ($(CPU),x86)
      EX_LIBS += clang_rt.asan_dynamic-i386.lib \
                 clang_rt.asan_dynamic_runtime_thunk-i386.lib
    else
      EX_LIBS += clang_rt.asan_dynamic-x86_64.lib \
                 clang_rt.asan_dynamic_runtime_thunk-x86_64.lib
    endif
  endif
endif

#
# UBSAN build settings.
#
# Ref: https://clang.llvm.org/docs/UndefinedBehaviorSanitizer.html
#
ifeq ($(USE_UBSAN),1)
  ifeq ($(CC),cl)
    $(warning 'cl' does not support 'USE_UBSAN=1'. Disabling.)
    USE_UBSAN := 0
  else
    RCFLAGS += -DUSE_UBSAN
    CFLAGS  += -DUSE_UBSAN -fsanitize=undefined

    #
    # The default for 'x86 / Release' is 'clang_rt.asan_dynamic_runtime_thunk-i386.lib'
    # (and clang_rt.asan_dbg_dynamic_runtime_thunk-i386.lib for 'x86 / Debug')
    #
    # Let the linker select the ASAN libraries.
    #
    LDFLAGS += -inferasanlibs \
               -libpath:$(CLANG_$(BITS))/lib/clang/$(CLANG_MAJOR_VER)/lib/windows
  endif
endif

ifneq ($(USE_ASAN)-$(USE_UBSAN),0-0)
  ifeq ($(CC),clang-cl)
    $(info Detected 'CLANG_ROOT=$(CLANG_$(BITS))' for 'USE_ASAN=$(USE_ASAN)' and 'USE_UBSAN=$(USE_UBSAN)'.)
  endif
endif

RCFLAGS += -DRC_BITS=$(BITS)

EX_LIBS += advapi32.lib ole32.lib setupapi.lib winusb.lib

ifeq ($(USE_WSOCK_TRACE),1)
  EX_LIBS += wsock_trace-$(CPU).lib
  LDFLAGS += -nodefaultlib:ws2_32.lib
else
  EX_LIBS += ws2_32.lib
endif

