# Undefine any gcc include-path env-vars since
# it could confuse clang-cl.
#
export C_INCLUDE_PATH=
export CPLUS_INCLUDE_PATH=

OBJ_DIR = objects

EX_LIBS =

ifneq ($(CC),cl)
  ifneq ($(CC),clang-cl)
    $(error $(Usage))
